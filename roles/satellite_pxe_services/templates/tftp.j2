# TFTP service configuration for PXE boot
# Generated by Ansible for Satellite PXE Services

service tftp
{
    disable         = no
    socket_type     = dgram
    protocol        = udp
    wait            = yes
    user            = root
    server          = /usr/sbin/in.tftpd
    server_args     = -s {{ tftp_root | default('/var/lib/tftpboot') }} -v
    per_source      = 11
    cps             = 100 2
}
