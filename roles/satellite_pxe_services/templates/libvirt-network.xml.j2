<network>
  <name>{{ libvirt_network | default('satellite-pxe') }}</name>
  <uuid>{{ ansible_date_time.epoch | hash('md5') }}</uuid>
  <bridge name="virbr-sat" stp="on" delay="0"/>
  <forward mode="nat">
    <nat>
      <port start="1024" end="65535"/>
    </nat>
  </forward>
  <ip address="{{ satellite_ip | default('10.168.151.127') }}" netmask="{{ netmask | default('255.255.0.0') }}">
    <dhcp>
      <range start="{{ dhcp_range_start | default('10.168.1.100') }}" end="{{ dhcp_range_end | default('10.168.1.200') }}"/>
      <bootp file="pxelinux.0" server="{{ satellite_ip | default('10.168.151.127') }}"/>
    </dhcp>
  </ip>
</network>
