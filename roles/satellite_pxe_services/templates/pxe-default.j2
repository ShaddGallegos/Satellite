DEFAULT menu
PROMPT 0
TIMEOUT 300

MENU TITLE Satellite PXE Boot Menu
MENU BACKGROUND #c83c1c

LABEL local
    MENU LABEL Boot from ^local disk
    LOCALBOOT 0

LABEL rhel96-x86_64
    MENU LABEL Install ^RHEL 9.6 x86_64
    KERNEL boot/rhel96-x86_64-vmlinuz
    APPEND initrd=boot/rhel96-x86_64-initrd.img inst.ks=http://{{ satellite_fqdn | default('satellite.prod.spg') }}/unattended/provision network ksdevice=bootif
    IPAPPEND 2

LABEL rescue
    MENU LABEL ^Rescue Mode
    KERNEL boot/rhel96-x86_64-vmlinuz
    APPEND initrd=boot/rhel96-x86_64-initrd.img rescue

MENU SEPARATOR

LABEL reboot
    MENU LABEL ^Reboot
    COM32 reboot.c32

LABEL poweroff
    MENU LABEL Power ^Off
    COM32 poweroff.c32
